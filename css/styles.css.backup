/* === Стили для текстовых сценариев === */

/* Селектор стилей */
#style-selector-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 900px;
    max-height: 80vh;
    background-color: rgba(20, 20, 20, 0.95);
